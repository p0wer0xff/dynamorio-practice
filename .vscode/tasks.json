{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "cmake -S . -B build && cmake --build build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build DynamoRIO",
      "type": "shell",
      "command": "mkdir build_dr && cd build_dr && cmake ../dynamorio && make -j",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
